<style>
body {
color: white;
}
</style>
  <% if @user.photo.present? %>
  <%= cl_image_tag @user.photo, height: 300, width: 400, crop: :fill %> <% end %>
  <%= simple_form_for(@user) do |f| %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit "upload" %>
<% end %>
<h1 id="heading"> My Books (<%= @user.books.length %>) </h1>
<div class="cards">
  <% @user.books.each do |book| %>
  <div class="card">
    <div class="book-img">
      <%= cl_image_tag book.photo, height: 420, width: 262, crop: :fill %>
    </div>
    <div class="book-info">
      <div class="book-text">
        <h1> <%= book.title %> </h1>
        <h2> <%= book.author %>  </h2>
        <p> <%= book.description %> </p>
      </div>
      <div class="book-btn">
        <div id="link">
          <button type="button"> <%= link_to "more", book_path(book) %> </button>
        </div>
      </div>
    </div>
  </div><% end %>
</div>

