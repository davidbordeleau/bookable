<div class="navbar-light_bulb">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-light_bulb-brand" do %>
    <%= image_tag "light_bulb.png", height: 50 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-light_bulb-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->

      <%= link_to "Add a Book", new_user_book_path(current_user), class: "navbar-light_bulb-item navbar-light_bulb-link" %>
      <%= link_to "Listing", books_path, class: "navbar-light_bulb-item navbar-light_bulb-link" %>
      <%= link_to "Search", root_path, class: "navbar-light_bulb-item navbar-light_bulb-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-light_bulb-item">
        <div class="dropdown">
          <%= image_tag "Lola_4.jpg", class: "avatar dropdown-toggle", id: "navbar-light_bulb-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-light_bulb-dropdown-menu">
            <li>
              <%= link_to user_path(current_user) do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->

      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-light_bulb-item navbar-light_bulb-link" %>
      <%= link_to t(".sign_up", default: "Sign Up"), new_user_registration_path, class: "navbar-light_bulb-item navbar-light_bulb-link" %>

    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-light_bulb-item hidden-md hidden-lg">
    <div class="dropdown">
      <i style="font-size: 25px;" class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-light_bulb-dropdown-menu">
        <li><a href="#">Log In</a></li>
        <li><a href="#">Sign Up</a></li>
        <!-- <li><a href="#">Other one</a></li> -->
      </ul>
    </div>
  </div>
</div>

